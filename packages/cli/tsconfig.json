{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ES2020",
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2021",
        "types": ["node"]
    },
    "include": ["src/**/*.js", "src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules"]
}
